{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/commonjs",
    "newLine": "LF",
    "lib": ["es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__"
  ]
}
